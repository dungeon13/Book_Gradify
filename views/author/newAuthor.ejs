<% include ../header.ejs %>
<div class="container">
    <div class="row">
            <form action="/authors" method="POST">
                <h1>Adding new Author</h1>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="author[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="nationality" name="author[nationality]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="language" name="author[language]">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary btn-block">Submit</button>
                </div>
                
            </form>
    </div>
</div>

